<%= form_for(@company) do |f| %>
  <%= render 'shared/error_messages_company', object: @company %>

  <%= f.label :Name %>
  <%= f.text_field :Name, class: 'form-control' %>

  <%= f.label :Website %>
  <%= f.text_field :Website, class: 'form-control' %>

  <%= f.label :Address %>
  <%= f.text_field :Address, class: 'form-control' %>
  
  <%= f.label :Size %>
  <%= f.text_field :Size, class: 'form-control' %>
  
  <%= f.label :Founded %>
  <%= f.text_field :Founded, class: 'form-control' %>
  
  <%= f.label :Revenue %>
  <%= f.text_field :Revenue, class: 'form-control' %>
  
  <%= f.label :Synopsis %>
  <%= f.text_field :Synopsis, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
