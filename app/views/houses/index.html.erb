<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Company &emsp;&emsp;&emsp;</th>
      <th>Location &emsp;&emsp;&emsp;</th>
      <th>Square Footage &emsp;&emsp;&emsp;</th>
      <th>Year &emsp;&emsp;&emsp;</th>
      <th>Style &emsp;&emsp;&emsp;</th>
      <th>Price &emsp;&emsp;&emsp;</th>
      <th>Floors &emsp;&emsp;&emsp;</th>
      <th>Basement &emsp;&emsp;&emsp;</th>
      <th>Owner	&emsp;&emsp;&emsp;</th>
      <th>Contact &emsp;&emsp;&emsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.company.Name %></td>
        <td><%= house.location %></td>
        <td><%= house.square_footage %></td>
        <td><%= house.year %></td>
        <td><%= house.style %></td>
        <td><%= house.price %></td>
        <td><%= house.floors %></td>
        <td><%= house.basement %></td>
        <td><%= house.owner %></td>
        <td><%= house.contact %></td>
        <td><%= link_to 'Show', house %>&nbsp;</td>
        <td><%= link_to 'Edit', edit_house_path(house) %>&nbsp;</td>
        <td><%= link_to 'Delete', house, method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;</td>
      </tr>
	<% end %>
  </tbody>
</table>

<br>

